# Vestaboard Local API (required)
VESTABOARD_LOCAL_URL=http://192.168.1.100:7000
VESTABOARD_LOCAL_KEY=your-local-api-key-here

# Weather - OpenWeatherMap (optional)
OPENWEATHER_API_KEY=your-openweather-api-key
WEATHER_LOCATION=Seattle,WA,US

# Stocks (optional - uses yfinance, no API key needed)
STOCK_SYMBOLS=SPY,QQQ,AAPL

# Calendar - Google Calendar ICS URL (optional)
CALENDAR_URL=https://calendar.google.com/calendar/ical/your-calendar-id/basic.ics

# News - NewsAPI (optional)
NEWS_API_KEY=your-newsapi-key

# Web server
WEB_HOST=0.0.0.0
WEB_PORT=8080

# Database
DB_PATH=data/vestaboard.db
